<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>

        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:lineSpacingExtra">7dp</item>
    </style>

    <style name="TextLight">
        <item name="android:textColor">@color/primaryTextColorLight</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="ListWithScrollbarTheme">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_recyclerview_color</item>
        <item name="android:scrollbarSize">3dp</item>
    </style>

    <style name="ViewWithRippleEfectTheme">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
